<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context" xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd"> <!-- bean definitions here -->

<!--       use <context:annotation-config/> or CommonAnnotationBeanPostProcessor for annotation -->
<!--      <context:annotation-config/> -->
		<bean class="org.springframework.context.annotation.CommonAnnotationBeanPostProcessor"/>
	<bean id="hello" class="InitDestroyXML.Hello" init-method="init" destroy-method="destroy"> 
	</bean> 
	<bean id="hi" class="InitDestroyXML.Hi" init-method="init" destroy-method="destroy"> 
	</bean> 
	<bean id="bye" class="InitDestroyXML.Bye" init-method="init" destroy-method="destroy"> 
	</bean> 
</beans> 
